{
    "manifest_version": 3,
  
    "name": "vcComments",
    "description": "Top comments from vc articles",
    "version": "1.0",

    "action": {
        "default_icon": { 
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
           "128": "icons/icon128.png"
        },
        "default_title": "Show top comments",
        "default_popup": "index.html"
    },

    "permissions": ["tabs"],

    "content_scripts": [
        {
          "matches": ["https://vc.ru/*", "https://dtf.ru/*", "https://tjournal.ru/*"],
          "js": ["content-script.js"]
        }
    ]
}